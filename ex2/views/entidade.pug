extends layout

block content
  .w3-container
    h1 Entidade #{entidade.NIPC_entidade_comunicante}
    table.w3-table.w3-striped.w3-bordered
      tr
        th NIPC Entidade Comunicante
        td= entidade.NIPC_entidade_comunicante
      tr
        th Nome da Entidade
        td= entidade.entidade_comunicante
      tr
        th Valor Total dos Contratos
        td= totalValor
    h2 Contratos
    table.w3-table.w3-striped.w3-bordered
      thead
        tr
          th ID Contrato
          th Objecto do Contrato
          th Data de Celebração
          th Preço Contratual
      tbody
        each contrato in contratos
          tr
            td: a(href=`/contratos/${contrato._id}`)= contrato._id
            td= contrato.objectoContrato
            td= contrato.dataCelebracaoContrato
            td= contrato.precoContratual
    a.w3-button.w3-blue(href='/') Voltar
