extends layout

block content
  .w3-container
    h1 Contratos
    table.w3-table.w3-striped.w3-bordered
      thead
        tr
          th ID Contrato
          th Objecto do Contrato
          th Data de Celebração
          th Preço Contratual
          th NIPC Entidade Comunicante
          th Entidade Comunicante
      tbody
        each contrato in contratos
          tr
            td: a(href=`/contratos/${contrato._id}`)= contrato._id
            td= contrato.objectoContrato
            td= contrato.dataCelebracaoContrato
            td= contrato.precoContratual
            td: a(href=`/entidades/${contrato.NIPC_entidade_comunicante}`)= contrato.NIPC_entidade_comunicante
            td= contrato.entidade_comunicante
